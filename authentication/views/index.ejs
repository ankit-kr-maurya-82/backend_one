        <input class="border-2 border-zinc-300 text-zinc-100 bg-transparent rounded-md px-5 py-2"  type="password" name="password" id="" placeholder="password">
        <input class="border-2 border-zinc-300 text-zinc-100 bg-transparent rounded-md px-5 py-2"  type="number" name="age" id="" placeholder="age">
        <input class="bg-indigo-500 border-2  text-zinc-100 rounded-md px-5 py-2 cursor-pointer b hover:bg-indigo-900 "  type="submit" name="submit" id="" value="Create User">
      </form>
    </div>
